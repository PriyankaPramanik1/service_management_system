<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%=title%></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- css custom -->
  <link rel="stylesheet" href="/css/managerDashboard.css">
</head>

<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <%-include('./layouts/managerSidebar')%>

      <!-- Main Content -->
      <div class="main-content">
        <!-- Header -->
        <div class="header">
          <div class="page-title">
            <h1>All Booking Overview</h1>
            <p>Welcome back! All booking are listed here.</p>
          </div>
          <div class="header-actions">
            
          </div>
        </div>

         <% if(success && success.length> 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>
                        <% if(error && error.length> 0){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                            <% } %>
                            
        <!-- Content Area -->
        <div class="content-area">
          <!-- Projects Table -->
          <div class="content-card">
            <div class="card-header">

                      <h3>Bookings <span>(<%=bookingCount %>)</span></h3>

                    </div>
            <div class="table-responsive">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>S NO.</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Appliance</th>
                    <th>Status</th>
                    <th>Assign Task</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (booking.length> 0) { %>
                    <% booking.forEach((booking, index)=> { %>
                      <tr>
                        <td><%=index+1%></td>
                        <td>
                          <%= booking.name %>
                        </td>
                        <td>
                          <%= booking.email %>
                        </td>
                        <td>
                          <%= booking.phone %>
                        </td>
                        <td>
                          <%= booking.address %>
                        </td>
                        <td>
                          <%= booking.applianceType %>
                        </td>
                        <td>
                          <%= booking.status %>
                        </td>
                        <td>
                          <% if (booking.status==='pending' ) { %>
                            <form action="/assign-task" method="post" class="assign-form">
                              <input type="hidden" name="bookingId" value="<%= booking._id %>">
                              <div class="assignment-controls">
                                <select name="technicianId" class="technician-select" required>
                                  <option value="">Select Technician</option>
                                  <% technicians.forEach(technician=> { %>
                                    <% if (technician.area===booking.address) { %>
                                      <option value="<%= technician._id %>"
                                        data-tasks="<%= technician.currentTasks %>/<%= technician.maxTasks %>"
                                        data-phone="<%= technician.phone %>">
                                        <%= technician.name %> (<%= technician.currentTasks %>/<%= technician.maxTasks
                                              %>)
                                      </option>
                                      <% } %>
                                        <% }); %>
                                </select>
                                <button type="submit" class="assign-btn">
                                  <i class="fas fa-user-check"></i> Assign
                                </button>
                              </div>
                              <div class="technician-info" id="info-<%= booking._id %>"></div>
                            </form>
                            <% } else { %>
                              <div class="assignment-status">
                                <span class="status-badge assigned">
                                  <i class="fas fa-check-circle"></i> Assigned
                                </span>
                                <div class="assigned-details">
                                  <small class="technician-name">
                                    <% user.forEach(technician=> { %>
                                      <% if (technician.id==booking.assignedTo) { %>
                                        <%= technician.name %>
                                          <% } %>
                                            <% }); %>
                                  </small>
                                </div>
                              </div>
                              <% } %>
                        </td>
                      </tr>
                      <% }); %>
                        <% } else { %>
                          <tr>
                            <td colspan="7" class="text-center py-4">
                              <div class="d-flex flex-column align-items-center">
                                <h4 class="text-muted">No bookings found</h4>
                                <p class="text-muted"></p>
                              </div>
                            </td>
                          </tr>
                          <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>