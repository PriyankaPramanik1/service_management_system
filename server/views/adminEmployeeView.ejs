<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <!-- css custom -->
    <link rel="stylesheet" href="/css/managerDashboard.css">
</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <%-include('./layouts/adminSidebar')%>

            <!-- Main Content -->
            <div class="main-content">
                <!-- Header -->
                <div class="header">
                    <div class="page-title">
                        <h1>All Technicians Overview</h1>
                        <p>Welcome back! Here all the technicians are listed.</p>
                    </div>
                    <div class="header-actions">
                        
                    </div>
                </div>
                <% if(success && success.length> 0){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>
                        <% if(error && error.length> 0){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                            <% } %>

                                <!-- Content Area -->
                                <div class="content-area">
                                    <!-- Left Column -->
                                    <div class="left-column">
                                        <!-- Projects Table -->
                                        <div class="content-card">
                                            <div class="card-header">
                                                <h3>Technicians <span>(<%=techniciansCount %>)</span></h3>
                                            </div>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>S NO.</th>
                                                            <th>Name</th>
                                                            <th>Email</th>
                                                            <th>Phone</th>
                                                            <th>Role</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% technicians.forEach((technician,index)=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= index+1%>
                                                                </td>
                                                                <td>
                                                                    <%= technician.name %>
                                                                </td>
                                                                <td>
                                                                    <%= technician.email %>
                                                                </td>
                                                                <td>
                                                                    <%= technician.phone %>
                                                                </td>
                                                                <td>
                                                                    <%= technician.role %>
                                                                </td>
                                                                <td>
                                                                    <a href="/delete/employee/<%= technicians._id %>"
                                                                        class="btn btn-danger">Delete</a>
                                                                </td>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
            </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>